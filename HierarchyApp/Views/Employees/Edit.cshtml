@model HierarchyApp.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />
            <input type="hidden" asp-for="Image" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <ejs-dropdownlist id="ddlPositions" ejs-for="CompanyPositionId" dataSource="@ViewBag.positionData"
                                  placeholder="Current @Model.Position" popupHeight="220px">
                    <e-dropdownlist-fields text="PositionName" value="CompanyPositionId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
                <span asp-validation-for="Position" class="text-danger fs-6"></span>
            </div>
            <div class="form-group my-2">
                <ejs-dropdownlist id="boss" ejs-for="BossId" dataSource="@ViewBag.employeeData"
                                  placeholder="Choose Boss" popupHeight="220px">
                    <e-dropdownlist-fields text="FullName" value="EmployeeId"></e-dropdownlist-fields>
                </ejs-dropdownlist>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label">Image</label>
                    <input asp-for="ImageUpload" class="form-control" />
                </div>
                <div class="col">
                    <div class="form ">
                        <input type="submit" value="Save" class="btn btn-primary mt-2" />
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
        </form>
    </div>

</div>
<div class="col-md-4">
    <div class=" h-70 d-flex justify-content-center align-items-center">
        <img src="~/media/images/@Model.Image" id="imgpreview" class="pt-2 w-50 h-50" />
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

    <script>
        $("#ImageUpload").change(function () {
            readURL(this);
        });
    </script>
}
